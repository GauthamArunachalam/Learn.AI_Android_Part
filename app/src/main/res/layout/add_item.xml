<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter title"
        android:inputType="textPersonName"
        android:layout_marginBottom="50dp"
        android:layout_above="@+id/content_label"
        android:layout_alignRight="@+id/view2"
        android:layout_alignEnd="@+id/view2" />

    <EditText
        android:id="@+id/con"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:ems="10"
        android:hint="Enter Content"
        android:inputType="textPersonName"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/title"
        android:layout_alignEnd="@+id/title" />


    <TextView
        android:id="@+id/sumbit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/tabcolor"
        android:padding="20dp"
        android:text="Speak"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="16sp"
        android:layout_marginBottom="50dp"/>

    <TextView
        android:id="@+id/content_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:text="Enter your Content"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_above="@+id/con"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_margin="5dp"
        android:background="@color/gray"
        android:layout_below="@id/con"
        android:id="@+id/view2"></View>

    <TextView
        android:id="@+id/TitleLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Your Title"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginBottom="45dp"
        android:layout_alignBottom="@+id/title"
        android:layout_alignLeft="@+id/content_label"
        android:layout_alignStart="@+id/content_label" />
</RelativeLayout>